<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ced4da"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Inner background layer with insets to create custom border thickness -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>
